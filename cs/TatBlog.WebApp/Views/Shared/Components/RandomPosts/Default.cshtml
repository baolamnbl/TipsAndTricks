@model IList<Post>
<div class="mb-4">
    <h3 class="text-success mb-2">
        đang kí nhận tin mới
    </h3>

    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Blog"
                   asp-action="Post"
                   asp-route-slug="@item.UrlSlug"
                   title=".Name">
                    <span>@item.Title</span>
                    <span>(@item.ViewCount)</span>
               </a>
            </li>
        }
    </ul>
</div>